set nocompatible

filetype plugin on
filetype indent on

syntax on
set background=dark

set autoread
set ruler
set number
set smartcase
set hlsearch
set showmatch

set noerrorbells
set novisualbell

set nobackup
set nowb
set noswapfile
set noundofile

set noexpandtab
set shiftwidth=4
set tabstop=4
set softtabstop=4
set smarttab

set ai
set si
set nowrap

execute pathogen#infect()
let g:vim_markdown_folding_disabled=1
let mapleader = ","
